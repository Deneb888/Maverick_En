                    </Grid>
                    <ControlTemplate.Triggers >
                        <Trigger Property="IsChecked" Value="true">
                            <Setter Property="Foreground" TargetName="lblone" Value="#00AAFF"></Setter>
                            <Setter Property="Background" TargetName="borone" Value="#00AAFF"></Setter>
